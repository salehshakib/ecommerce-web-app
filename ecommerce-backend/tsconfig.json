{
  "compilerOptions": {
    /* Run TypeScript directly (no build step) */
    "module": "esnext",
    "moduleResolution": "bundler",
    "target": "esnext",

    /* File layout */
    "rootDir": "./src",
    "outDir": "./dist", // optional, kept for IDE convenience

    /* Aliases */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },

    /* Behavior */
    "allowImportingTsExtensions": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
